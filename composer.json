{
    "name": "kostaspt/namespace-checker",
    "description": "Find wrong namespaces in your PHP projects",
    "type": "application",
    "license": "MIT",
    "keywords": ["namespace"],
    "authors": [
        {
            "name": "Konstantinos Pittas",
            "email": "konstantinos.pittas@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.0",
        "spatie/regex": "^1.2",
        "symfony/console": "^3.4",
        "symfony/finder": "^3.4",
        "tightenco/collect": "^5.5"
    },
    "require-dev": {
        "larapack/dd": "^1.1",
        "phpunit/phpunit": "^6.5",
        "spatie/phpunit-snapshot-assertions": "^1.2",
        "spatie/phpunit-watcher": "^1.3"
    },
    "autoload": {
        "psr-4": {
            "PhpNsFixer\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PhpNsFixer\\Tests\\": "tests/"
        }
    },
    "bin": [
        "bin/php-ns-fixer"
    ],
    "scripts": {
        "test": "vendor/bin/phpunit -c phpunit.xml.dist",
        "watch": "vendor/bin/phpunit-watcher watch"
    },
    "config": {
        "sort-packages": true
    }
}
